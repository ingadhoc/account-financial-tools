<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="invoicing_settings" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="group_reference_on_tree_and_main_form"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="group_reference_on_tree_and_main_form"/>
                        <div class="text-muted">
                            Show Reference/Description in list view and in main section of form view
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
